<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite2" verbose="1">
    <parameter name="browserP" value="none"/>
    <test name="Invalid username">
        <parameter name="usernameP" value="wronguser"/>
        <parameter name="passwordP" value="SuperSecretPassword!"/>
        <parameter name="errorP" value="Your username is invalid!"/>
        <classes>
            <class name="com.herokuapp.NegativeLoginTest"/>
        </classes>
    </test>

    <test name="Invalid password">
        <parameter name="usernameP" value="tomsmith"/>
        <parameter name="passwordP" value="wrongpassword"/>
        <parameter name="errorP" value="Your password is invalid!"/>
        <classes>
            <class name="com.herokuapp.NegativeLoginTest"/>
        </classes>
    </test>

    <test name="Login">
        <parameter name="usernameP" value="tomsmith"/>
        <parameter name="passwordP" value="SuperSecretPassword!"/>
        <parameter name="subHeaderP" value="You logged into a secure area!"/>
        <classes>
            <class name="com.herokuapp.LoginTest"/>
        </classes>
    </test>

    <test name="Logout">
        <parameter name="usernameP" value="tomsmith"/>
        <parameter name="passwordP" value="SuperSecretPassword!"/>
        <parameter name="flashSuccessP" value="You logged out of the secure area!"/>
        <classes>
            <class name="com.herokuapp.LogoutTest"/>
        </classes>
    </test>

    <test name="SelectByDropdownTest">
        <classes>
            <class name="com.herokuapp.SelectByDropdownTest"/>
        </classes>
    </test>

    <test name="CheckboxesTest">
        <classes>
            <class name="com.herokuapp.CheckboxesTest"/>
        </classes>
    </test>
</suite>

